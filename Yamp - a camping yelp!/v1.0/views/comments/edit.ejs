<% include ../partials/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit your comment</h1>
		<div style="width: 30%; margin: 20px auto;">
			<form action="/camps/<%=campId%>/comments/<%=comment._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="textarea" name="comment[text]" style="max-width: 100%"><%=comment.text%></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Done!</button>
				</div>	
			</form>
			<a href="/camps/<%=camps._id%>">Back</a>
		</div>
	</div>
</div>
<% include ../partials/footer.ejs %>