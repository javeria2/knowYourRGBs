<% include ../partials/header.ejs %>
<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Add a new comment to <%=camps.name%></h1>
		<div style="width: 30%; margin: 20px auto;">
			<form action="/camps/<%=camps._id%>/comments" method="POST">
				<div class="form-group">
					<textarea class="form-control" type="textarea" name="comment[text]" placeholder="description" style="max-width: 100%"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Post!</button>
				</div>	
			</form>
			<a href="/camps/<%=camps._id%>">Back</a>
		</div>
	</div>
</div>
<% include ../partials/footer.ejs %>