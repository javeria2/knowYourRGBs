<!-- Flash messages -->
<%if(errorMessage && errorMessage.length > 0){%>
<div class="alert alert-danger container" role="alert">
	<%=errorMessage%>	
</div>
<%}%>

<%if(successMessage && successMessage.length > 0){%>
	<div class="alert alert-success container" role="alert">
		<%=successMessage%>	
	</div>
<%}%>
